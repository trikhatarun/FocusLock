<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/layout_curve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>

    <TextView android:layout_width="221dp"
              android:text="Title"
              android:layout_height="44dp"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="61dp"
              android:layout_alignParentEnd="true"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="54dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="25dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="25dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.65"
              android:id="@+id/title_textview"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_button"
            android:textSize="12dp"
            android:text="NO"
            android:textColor="#1458ea"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold" android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="90dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="209dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:insetTop="0dp" android:insetBottom="0dp" app:iconPadding="0dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yes_button"
            android:textSize="12dp"
            android:text="YES"
            android:textColor="#222222"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold" android:layout_marginEnd="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="90dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="252dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:insetTop="0dp" android:insetBottom="0dp" app:iconPadding="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
